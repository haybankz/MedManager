<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ViewMedicationActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_view_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_edit"
            />

        <ImageView
            android:id="@+id/img_view_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@id/img_view_edit"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_view_med_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Med name"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_view_med_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_view_med_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="dosage"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_view_med_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ringer frequency"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_view_med_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="start date"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down_arrow"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_view_med_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="end date"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_view_med_activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activate"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/background_shape_reminder"/>

    </LinearLayout>


</LinearLayout>